@page "{id?}"
@model TopsyTurvyCakes.Pages.Admin.AddEditRecipeModel
@{
    ViewData["Title"] = Model.IsNewRecipe ? "New Recipe" : "Edit Recipe";

}

@if (!ModelState.IsValid)
{
<div class="col-md-offset-2" col-md-10>
    <h3 class="text-danger"> YOU FUCKED UP</h3>
    <div asp-validation-summary="All"></div>
    <hr />
   

    </div>
}
    <form method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group">
            <label asp-for="Recipe.Name" class="col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Recipe.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Description" class="col-md-2"></label>
            <div class="col-md-10">
                <textarea rows="3" asp-for="Recipe.Description" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Ingredients" class="col-md-2"></label>
            <div class="col-md-10">
                <textarea rows="5" asp-for="Recipe.Ingredients" class="form-control"> </textarea>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Recipe.Directions" class="col-md-2"></label>
            <div class="col-md-10">
                <textarea rows="5" asp-for="Recipe.Directions" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Image" class="col-md-2"></label>
            <div class="col-md-10">
                <input type="file" asp-for="Image" class="form-control"/>
                
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn btn-primary">Save</button>
            @if (!Model.IsNewRecipe)
            {
                <button type="submit" asp-page-handler="Delete" class="btn btn btn-danger">Delete</button>
            }
        </div>
    </form>


